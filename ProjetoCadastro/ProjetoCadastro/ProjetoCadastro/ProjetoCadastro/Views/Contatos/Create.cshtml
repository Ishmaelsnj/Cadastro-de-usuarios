@model ProjetoCadastro.Models.ContatoModel

@{ ViewData["Title"] = "Create"; }

<h1>Criar Contato</h1>

<div>
    <form id="create-contato-form" asp-action="Create" method="post">
        <!-- Campo Nome -->
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome" data-val="true" data-val-required="O nome é obrigatório." />
            <span class="text-danger field-validation-valid" data-valmsg-for="Nome" data-valmsg-replace="true"></span>
        </div>

        <!-- Campo CPF -->
        <div class="form-group">
            <label asp-for="CPF" class="control-label">CPF</label>
            <input asp-for="CPF" class="form-control" id="CPF" placeholder="Digite o CPF" data-val="true" data-val-required="O CPF é obrigatório." data-val-regex="CPF inválido." data-val-regex-pattern="\d{11}" />
            <span class="text-danger field-validation-valid" data-valmsg-for="Cpf" data-valmsg-replace="true"></span>
        </div>

        <!-- Telefones -->
        <div id="telefones-container">
            <h3>Telefones</h3>
            <!-- Telefones dinâmicos serão adicionados aqui -->
        </div>

        <button type="button" id="add-telefone" class="btn btn-secondary">Adicionar Telefone</button>
        <br /><br />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {
            // Aplicando a máscara no CPF
            $('#CPF').mask('000.000.000-00');

            let telefoneIndex = 0;

            $('#add-telefone').click(function () {
                const telefoneItem = `
                            <div class="telefone-item">
                                <div class="form-group">
                                    <label for="Telefones[${telefoneIndex}].Numero">Número de Telefone</label>
                                    <input name="Telefones[${telefoneIndex}].Numero" class="form-control telefone-mask" placeholder="Digite o telefone" data-val="true" data-val-required="O número do telefone é obrigatório." />
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[${telefoneIndex}].Numero" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group">
                                    <label for="Telefones[${telefoneIndex}].Tipo">Tipo de Telefone</label>
                                    <select name="Telefones[${telefoneIndex}].Tipo" class="form-control" data-val="true" data-val-required="O tipo de telefone é obrigatório.">
                                        <option value="">Selecione o tipo</option>
                                        <option value="Fixo">Fixo</option>
                                        <option value="Comercial">Comercial</option>
                                        <option value="Pessoal">Pessoal</option>
                                        <option value="WhatsApp">WhatsApp</option>
                                    </select>
                                    <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[${telefoneIndex}].Tipo" data-valmsg-replace="true"></span>
                                </div>
                                <button type="button" class="btn btn-danger remove-telefone">Remover Telefone</button>
                                <hr />
                            </div>
                        `;
                $('#telefones-container').append(telefoneItem);

                telefoneIndex++;

                // Reaplicar a máscara nos novos campos de telefone
                $('.telefone-mask').mask('(00) 00000-0000');

                // Reativar a validação para os novos campos
                $.validator.unobtrusive.parse('#telefones-container');
            });

            // Remover telefone
            $('#telefones-container').on('click', '.remove-telefone', function () {
                $(this).closest('.telefone-item').remove();
            });
        });
    </script>
}
