@model ProjetoCadastro.Models.ContatoModel

@{ ViewData["Title"] = "Editar Contato"; }

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contatos" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="Nome" placeholder="Digite o nome do contato" />
        <span class="text-danger field-validation-valid" data-valmsg-for="Nome" data-valmsg-replace="true"></span>
    </div>

    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" id="CPF" placeholder="Digite o CPF" data-mask="000.000.000-00" />
        <span class="text-danger field-validation-valid" data-valmsg-for="CPF" data-valmsg-replace="true"></span>
    </div>

    <h3>Telefones</h3>
    <div id="telefones-list">
        @for (int i = 0; i < Model.Telefones.Count; i++)
        {
    <div class="telefone-item">
        <div class="form-group">
            <label for="Telefones[@i].Numero">Número de Telefone</label>
            <input type="text" id="Telefones[@i].Numero" name="Telefones[@i].Numero" class="form-control" placeholder="Digite o telefone" value="@Model.Telefones[@i].Numero" />
            <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[@i].Numero" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label for="Telefones[@i].Tipo">Tipo de Telefone</label>
            <select asp-for="Telefones[@i].Tipo" class="form-control" data-val="true" data-val-required="O tipo de telefone é obrigatório.">
                <option value="">Selecione o tipo</option>
                <option value="Fixo">Fixo</option>
                <option value="Comercial">Comercial</option>
                <option value="Pessoal">Pessoal</option>
                <option value="WhatsApp">WhatsApp</option>
            </select>
            <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[@i].Tipo" data-valmsg-replace="true"></span>
        </div>

        <button type="button" class="btn btn-danger remove-telefone">Remover</button>
    </div>}

    </div>
    <button type="button" id="add-telefone" class="btn btn-primary">Adicionar Telefone</button>

    <button type="submit" class="btn btn-success btn-block">Salvar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contatos" asp-action="Index" role="button">Voltar</a>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CPF').mask('000.000.000-00');

            let telefoneIndex = @Model.Telefones.Count;

            $('#add-telefone').click(function () {
                const telefoneItem = `
                    <div class="telefone-item">
                        <div class="form-group">
                            <label for="Telefones[${telefoneIndex}].Numero">Número de Telefone</label>
                            <input name="Telefones[${telefoneIndex}].Numero" class="form-control" placeholder="Digite o telefone" data-val="true" data-val-required="O número do telefone é obrigatório." />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[${telefoneIndex}].Numero" data-valmsg-replace="true"></span>
                        </div>
                        <div class="form-group">
                            <label for="Telefones[${telefoneIndex}].Tipo">Tipo de Telefone</label>
                            <select name="Telefones[${telefoneIndex}].Tipo" class="form-control">
                                <option value="">Selecione o tipo</option>
                                <option value="Fixo">Fixo</option>
                                <option value="Comercial">Comercial</option>
                                <option value="Pessoal">Pessoal</option>
                                <option value="WhatsApp">WhatsApp</option>
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="Telefones[${telefoneIndex}].Tipo" data-valmsg-replace="true"></span>
                        </div>
                        <button type="button" class="btn btn-danger remove-telefone">Remover</button>
                    </div>
                `;
                $('#telefones-list').append(telefoneItem);
                telefoneIndex++;
            });

            $(document).on('click', '.remove-telefone', function () {
                $(this).closest('.telefone-item').remove();
            });
        });
    </script>
}
